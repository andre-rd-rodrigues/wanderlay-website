---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contatos | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${SITE.url}/contatos`,
    "url": `${SITE.url}/contatos`,
    "name": "Fale Conosco | As Marcas Mais Famosas",
    "description":
      "Tem dúvidas ou precisa de ajuda com seu projeto? Entre em contato e juntos encontraremos as melhores soluções com nossos materiais e serviços especializados.",
    "isPartOf": {
      "@type": "WebSite",
      "url": `${SITE.url}`,
      "name": "As Marcas Mais Famosas",
      "description":
        "As Marcas Mais Famosas oferece materiais de construção de alta qualidade e serviços especializados para atender às suas necessidades em qualquer projeto.",
    },
    "inLanguage": "pt-BR"
  }}
>
  <ContactSection />
</MainLayout>

