---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { CONTACT } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Encontre os Materiais Perfeitos nas <span
        class="text-bostonBlue-500 dark:text-bostonBlue-400">Marcas Famosas</span>`
    subTitle="Soluções completas de ferro e aço em estruturas, ferramentas, acessórios e máquinas para construção e indústria."
    primaryBtn="Conheça os Produtos"
    primaryBtnURL='/produtos'
    secondaryBtn="Entre em Contato"
    secondaryBtnURL={CONTACT.whatsApp}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Baseado em mais de <span class="font-bold">1.200</span> avaliações`
    src={heroImage}
    alt="Produtos de construção em exibição"
    icon="whatsApp"
  />

  <ClientsSection
    title="Confiança de Grandes Parceiros"
    subTitle="Materiais e serviços aprovados pelos maiores nomes da construção."
  />

  <FeaturesGeneral
    title="Soluções Sob Medida"
    subTitle="Conosco, você encontra produtos de alta qualidade e serviços especializados para superar os desafios no dia a dia da construção e da indústria. Conte com nossa dedicação para alcançar resultados excepcionais."
    src={featureImage}
    alt="Produtos variados em destaque"
    features={features}
  />

  <FeaturesNavs
  title=`Encontre soluções personalizadas com as <span class="text-bostonBlue-500 dark:text-bostonBlue-400">Marcas Famosas</span> para todos os seus projetos:`
    tabs={[
      {
        heading: "Ferramentas de Alta Qualidade",
        content:
          "Encontre tudo o que precisa para seus projetos. Desde parafusos, tubos, vigas ou chapas, proporcionamos eficiência e confiança para suas montagens, fabrico, obras e projetos.",
        svg: "tools",
        src: tools,
        alt: "Equipamentos e ferramentas organizados",
        first: true,
      },
      {
        heading: "Atendimento Dedicado",
        content:
          "Receba suporte especializado para suas demandas. Desde a escolha dos materiais até orientações técnicas, estamos prontos para ajudar você a trabalhar com excelência.",
        svg: "dashboard",
        src: dashboard,
        alt: "Atendimento ao cliente eficiente",
        second: true,
      },
      {
        heading: "Soluções Duradouras",
        content:
          "Nossos materiais são selecionados para garantir máxima durabilidade e qualidade, permitindo resistência e bom acabamento.",
        svg: "house",
        src: construction,
        alt: "Estrutura de construção em destaque",
      },
    ]}
  />

  <TestimonialsSection
    title="O Parceiro Ideal para Sua Obra"
    subTitle="Conosco você constrói com confiança e qualidade. Conheça a opinião de nossos clientes satisfeitos."
    testimonials={[
      {
        content:
          "Os materiais fornecidos pelo Wanderley são de altíssima qualidade. Isso fez toda a diferença na entrega dos nossos projetos. Recomendo muito!",
        author: "Renata Lima",
        role: "Engenheira Civil | Construtora Prime",
        avatarSrc:
          "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3",
      },
    ]}
    statistics={[
      {
        count: "Excelência",
        description:
          "Atendimento personalizado e consultoria técnica especializada",
        icon: "star"
      },
      {
        count: "Soluções",
        description:
          "Flexibilidade para adaptar produtos e serviços às suas necessidades",
        icon: "puzzle"
      },
      {
        count: "Agilidade",
        description:
          "Entregas pontuais e eficientes para manter seu projeto no prazo",
        icon: "clock"
      },
      {
        count: "Compromisso",
        description: "Profissionalismo e proatividade em todas as etapas",
        icon: "userGroup"
      },
    ]}
  />

  <FAQ
    title="Dúvidas<br />frequentes"
    faqs={faqs}
  />

  <HeroSectionAlt
    title="Vamos Construir Juntos"
    subTitle="Encontre os melhores materiais e suporte especializado para transformar seus projetos em realidade."
    url={CONTACT.whatsApp}
    icon="whatsApp"
  />
</MainLayout>

