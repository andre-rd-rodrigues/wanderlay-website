---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images - you'll need to add these images to your project
import storefront from "@images/industry.avif";
import founder from "@images/industry.avif";
import teamWorking from "@images/industry.avif";
import warehouse from "@images/industry.avif";
import customerService from "@images/industry.avif";
import { CONTACT, SITE } from "@data/constants";
import HeroSectionAlt from "@/components/sections/landing/HeroSectionAlt.astro";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "História",
    subTitle:
      "Fundada por Wanderley de Carvalho, a 'As Marcas Mais Famosas' nasceu do sonho de fornecer materiais de construção de alta qualidade com um atendimento diferenciado. Desde nossa fundação, mantemos o compromisso com a excelência e a satisfação do cliente, crescendo constantemente e nos tornando referência no setor.",
    single: false,
    imgOne: storefront,
    imgOneAlt: "Fachada da loja As Marcas Mais Famosas",
    imgTwo: founder,
    imgTwoAlt: "Wanderley de Carvalho, fundador da empresa",
  },
  {
    isRightSection: false,
    title: "Missão e Valores",
    subTitle:
      "Sob a liderança de Wanderley de Carvalho, nossa missão é ser mais que uma loja de materiais de construção. Buscamos ser parceiros no sucesso de cada projeto, oferecendo produtos de qualidade, conhecimento técnico e suporte personalizado. Nossos valores fundamentais são integridade, excelência e compromisso com o cliente.",
    img: teamWorking,
    imgAlt: "Equipe trabalhando no atendimento ao cliente",
  },
  {
    isRightSection: true,
    title: "Logística",
    subTitle:
      "Contamos com uma estrutura moderna e eficiente, incluindo um amplo estoque com as principais marcas do mercado. Nossa logística é planejada para garantir entregas pontuais e um gerenciamento de estoque que assegura a disponibilidade dos produtos que nossos clientes precisam.",
    single: false,
    imgOne: warehouse,
    imgOneAlt: "Vista do nosso centro de distribuição",
    imgTwo: customerService,
    imgTwoAlt: "Equipe de atendimento ao cliente em ação",
  },
];

const pageTitle: string = `Sobre | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "@id": `${SITE.url}/sobre`,
    "url": `${SITE.url}/sobre`,
    "name": "Sobre As Marcas Mais Famosas | Nossa História e Valores",
    "description": "Conheça a história da As Marcas Mais Famosas, liderada por Wanderley de Carvalho, e descubra como nos tornamos referência em materiais de construção.",
    "isPartOf": {
        "@type": "WebSite",
        "url": `${SITE.url}`,
        "name": "As Marcas Mais Famosas",
        "description": "Materiais de construção de alta qualidade para atender às necessidades do seu projeto."
    },
    "inLanguage": "pt-BR"
  }}
>
  <MainSection
    title="Integridade, Excelência e Compromisso"
    subTitle="Há mais de duas décadas, a As Marcas Mais Famosas tem sido sinônimo de qualidade e confiança no setor de materiais de construção. Sob a liderança de Wanderley de Carvalho, construímos uma trajetória baseada na excelência e no compromisso com nossos clientes."
    btnExists={true}
    btnTitle="Entrar em Contato"
    btnURL={CONTACT.whatsApp}
    icon="whatsApp"
  />

  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesStats
    title="Trajetória de Sucesso"
    subTitle="Ao longo dos anos, construímos uma história de sucesso baseada na confiança de nossos clientes e na qualidade de nossos produtos e serviços."
    mainStatTitle="20+"
    mainStatSubTitle="anos de experiência no mercado"
    stats={[
      {
        stat: "50.000+",
        description: "clientes atendidos",
      },
      {
        stat: "15.000+",
        description: "produtos em catálogo",
      },
      {
        stat: "98%",
        description: "índice de satisfação",
      },
    ]}
  />

  <HeroSectionAlt
title="Vamos Construir Juntos"
subTitle="Encontre os melhores materiais e suporte especializado para transformar seus projetos em realidade."
url={CONTACT.whatsApp}
icon="whatsApp"
/>
</MainLayout>
