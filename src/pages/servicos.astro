---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { CONTACT, SITE } from "@data/constants";
import HeroSectionAlt from "@/components/sections/landing/HeroSectionAlt.astro";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
{
    isRightSection: true,
    title: "Orientação Especializada em Materiais de Construção",
    subTitle:
      "Escolher os materiais certos para o seu projeto pode ser complicado. Com nossa consultoria especializada, ajudamos você a selecionar os produtos ideais, oferecendo orientações sobre aplicações práticas e garantindo que você cumpra as exigências locais. Seja um pequeno reparo ou uma grande obra, estamos ao seu lado em cada etapa.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Plantas de construção e tablet com projetos digitais.",
    imgTwo: personWorking,
    imgTwoAlt: "Pessoa trabalhando em um ambiente de escritório",
  },
  {
    isRightSection: false,
    title: "Transformando Projetos em Realidade",
    subTitle:
      "Com os materiais de 'Marcas Famosas', você encontra tudo o que precisa para transformar suas ideias em realidade. Fornecemos produtos como parafusos, tubos e pregos para projetos que vão desde pequenos reparos até grandes construções. Qualidade e durabilidade são garantidas.",
    img: beforeAfter,
    imgAlt: "Local de construção antes e depois de finalizado",
    btnExists: true,
    btnTitle: "Ver materiais",
    btnURL: "/produtos",
  },
  {
    isRightSection: true,
    title: "Gestão de Materiais e Suporte Profissional",
    subTitle:
      "Garantimos que sua obra seja abastecida com os materiais certos no momento certo. Oferecemos um serviço de gestão eficiente para ajudar você a organizar seus pedidos, controlar o estoque e evitar atrasos. Fique tranquilo enquanto cuidamos de toda a logística para você.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Trabalhadores organizando materiais no canteiro de obras",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de um projeto bem gerenciado",
  },
  {
    isRightSection: false,
    title: "Garantia de Qualidade e Manutenção",
    subTitle:
      "Nosso compromisso não termina com a entrega. Oferecemos suporte contínuo para garantir que os materiais fornecidos atendam às expectativas, além de assistência para reposição ou manutenção de produtos. Conte conosco para acompanhar seu projeto até o final.",
    img: usingTools,
    imgAlt:
      "Homem com colete de segurança ajustando ferramentas em uma obra",
  },
  {
    isRightSection: true,
    title: "Soluções Personalizadas para Obras de Grande Porte",
    subTitle:
      "Atendemos às necessidades específicas de grandes obras e projetos comerciais. Com materiais de marcas renomadas e suporte técnico especializado, ajudamos você a superar os desafios do setor com eficiência e excelência. Solicite uma proposta personalizada para o seu projeto.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Estrutura de construção em progresso",
    imgTwo: underConstruction,
    imgTwoAlt: "Prédio em construção com equipamentos modernos",
  },
];

const pageTitle: string = `Serviços | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${SITE.url}/servicos`,
    "url": `${SITE.url}/servicos`,
    "name": "Serviços de Consultoria Especializada | Marcas Famosas",
    "description": "Unindo expertise à sua visão, 'Marcas Famosas' oferece serviços excepcionais e soluções completas no setor de materiais de construção, desde a consultoria até a conclusão do projeto.",
    "isPartOf": {
        "@type": "WebSite",
        "url": `${SITE.url}`,
        "name": "Marcas Famosas",
        "description": "Materiais de construção de alta qualidade para atender às necessidades do seu projeto."
    },
    "inLanguage": "pt-BR"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
  title="Unindo Expertise à Sua Visão"
  subTitle="Na 'Marcas Famosas', temos orgulho em oferecer soluções completas e um serviço excepcional no setor de materiais de construção. Nossa equipe experiente está dedicada a apoiar seu projeto desde o início até a conclusão, com uma variedade de serviços especializados."
  btnExists={true}
  btnTitle="Entre em Contato"
  btnURL={CONTACT.whatsApp}
  icon="whatsApp"
/>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Qualidade e Confiabilidade"
    subTitle="Nosso compromisso com qualidade e confiabilidade é evidente em cada projeto. Na 'Marcas Famosas', estamos dedicados a oferecer materiais e serviços líderes no setor que garantem construções duradouras."
    mainStatTitle="96%"
    mainStatSubTitle="dos nossos clientes avaliam sua experiência como excepcional"
    stats={[
    {
      stat: "99.8%",
      description: "taxa de conclusão dos projetos",
    },
    {
      stat: "5.000+",
      description: "projetos atendidos com sucesso",
    },
    {
      stat: "85%",
      description: "crescimento de clientes ano após ano",
    },
  ]}
/>


<HeroSectionAlt
title="Vamos Construir Juntos"
subTitle="Encontre os melhores materiais e suporte especializado para transformar seus projetos em realidade."
url={CONTACT.whatsApp}
icon="whatsApp"
/>

</MainLayout>
